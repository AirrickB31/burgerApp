 <div class="container text-center">
    <div class="burger-container">


      <div class="row main">
        <div class="col-md-6">
          <h1>Available Burgers</h1>
        <ul>
          {{#each burgers}}

            {{#unless this.devoured}}
            
              <li>
                
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                   <button class="btn-primary" type="submit">DEVOUR!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
          </ul>
        </div>


        <div class="col-md-6">
          <h1>Burgers That Have Been Devoured</h1>
           {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
        </div>
      </div>


      <div class="row bottom">
        <h1>Add a Burger</h1>
        <form class="form-inline" action="/" method="POST">
          <div class="form-group">
           
            <input type="text" id="ca" name="burger_name">
          </div>
          <button class="btn btn-success" type="submit"><i class="fa fa-plus" aria-hidden="true"></i>Add Burger</button>
        </form>
      </div>
    </div>
  </div>